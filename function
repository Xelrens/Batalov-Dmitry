//Описать функцию, которая проверяет является ли введенная пользователем последовательность символов палиндромом.

#include <iostream>
using namespace std;

bool palindrome (int Mass[], int size) 
{
int halfsize = size; //половина длины массива.
int minussize = size; //длина массива, для прохождения его с конца.

if(halfsize%2 != 0)
halfsize += 1;
halfsize = halfsize/2; //половина длины массива.

for(int i=0; i<halfsize; i++, minussize--)
{
if (Mass[i] != Mass[minussize-1]) //сравнение равноудалённых от центра пар чисел.
return (0); 
}

return(1);
}



int main()
{
int size = 1;
    
cout<<"Введите длину последовательности символов"<<endl;
cin >> size;
int Mass[size];
cout<<"Введите последовательность символов"<<endl;

for(int i=0; i<size; i++)
{
cin >> Mass[i];
}

if(palindrome(Mass, size) == 0)
cout<<"Последовательность символов не является палиндромом";
else
cout<<"Последовательность символов является палиндромом";
}
