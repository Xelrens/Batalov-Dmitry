#include <iostream>
#include <string>
using namespace std;

bool palindrome(string sequence) 
{
int size;
size = sequence.length();    
    
int halfsize = size; //половина длины последовательности символов.

if(halfsize%2 != 0)
halfsize += 1;
halfsize = halfsize/2;
for (int i=0; i<halfsize; i++)
{
if (sequence[i] != sequence[size-(i+1)]) //сравнение равноудалённых от центра пар символов.
return false;
}

return true;
}


int main()
{
string sequence;
cout<<"Введите последовательность символов"<<endl;
cin>> sequence;

if(palindrome(sequence) == false)
cout<<"Последовательность символов не является палиндромом";
else
cout<<"Последовательность символов является палиндромом";

}
