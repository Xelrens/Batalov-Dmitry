#include <iostream>
#include <iomanip>
using namespace std;

char * remove(char* S, int startIndex, int count)
{
int size;

startIndex --; //превращение порядкового номера в индекс.

for(int i = startIndex, j = 0; j<(size-startIndex-count); j++, i++)
    S[i] = S[startIndex+count+j];
    
S[startIndex+count+1] = '\0';
    
char * pointer = S;

return pointer;
}

int main()
{
char * S;
int size;

cout<<"Enter the size of the array"<<endl;
cin>>size;
S = new char[size];

int startIndex;
int count;

cout<<"Enter the string"<<endl;
cin>>setw (size+1)>>S;
cout<<"Enter the string"<<endl;
cin>>startIndex;
cout<<"Enter the number of characters to be deleted"<<endl;
cin>>count;
    
remove(S, startIndex, count);
}
