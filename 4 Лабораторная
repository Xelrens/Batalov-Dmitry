#include <iostream>
#include <iomanip>
using namespace std;

char * remove(char* S, int startIndex, int count)
{
int size;
int i = 0;
while (S[i] != '\0')
{
    i++;
    size += 1;
}
    
char * S2;
S2 = new char[size-count];

startIndex; //превращение порядкового номера в индекс.

for(int i=0; i<startIndex; i++)
    S2[i] = S[i];


for(int i = startIndex, j = 0; j<(size-startIndex-count); j++, i++)
    S2[i] = S[startIndex+count+j];

return S2;
}

int main()
{
char * S;
int size;

cout<<"Enter the size of the array"<<endl;
cin>>size;
S = new char[size];

int startIndex;
int count;

cout<<"Enter the string"<<endl;
cin>>setw (size+1)>>S;
cout<<"Enter start index"<<endl;
cin>>startIndex;
cout<<"Enter the number of characters to be deleted"<<endl;
cin>>count;
    
char *S2 = remove(S, startIndex, count);
cout<<S2;

}
